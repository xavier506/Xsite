<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title><%= @website.name %> <%= @website.category %></title>
  <!-- Bootstrap Core CSS -->
    <link href="/minimal-bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/minimal-bootstrap/css/full-width-pics.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
    .image-bg-fluid-height {
        background: url('<%= @website.cover_photo %>') no-repeat center center scroll;
        padding: 100px 0;
        background-size: 100% ;
    }

    .image-bg-fixed-height {
        background: url('<%= @website.cover_photo %>') no-repeat center center scroll;
        height: 450px;
        background-size: 100% ;
    }
    </style>
</head>
<body>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.3&appId=258341244182536";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
    <!-- Full Width Image Header with Logo -->
    <!-- Image backgrounds are set within the full-width-pics.css file. -->
    <header class="image-bg-fluid-height">
        <img class="img-responsive img-center" src="<%= @website.logo %>" alt="">
    </header>
<!-- Content Section -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="section-heading"><%= @website.name %></h1>
                    <p class="lead section-lead"><%= @website.about %></p>
                    <p class="section-paragraph"><%= @website.description %></p>
                </div>
            </div>
        </div>
    </section>
    <!-- Fixed Height Image Aside -->
    <!-- Image backgrounds are set within the full-width-pics.css file. -->
    <aside class="image-bg-fixed-height"></aside>

    <!-- Content Section -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="section-heading"><%= @website.category %></h1>
                    <% if @website.mission %>
                    <p class="lead section-lead">Our Mission: <%= @website.mission %></p>
                    <% end %>
                    <p class="section-paragraph"><%= @website.company_overview %></p>
                    <div class="fb-page" data-href="<%= @website.facebook_url %>" data-hide-cover="true" data-show-facepile="true" data-show-posts="false"><div class="fb-xfbml-parse-ignore"><blockquote cite="<%= @website.facebook_url %>"><a href="<%= @website.facebook_url %>">Facebook</a></blockquote></div></div>

                    <div class="address">
                    <%= @website.email %> 
                    <%= @website.phone %> 
                    <%= @website.street %> 
                    <%= @website.city %> <%= @website.country %> <%= @website.zip %> 

                    <% if @website.latitude && @website.longitude %>
                    <%= @website.latitude %> 
                    <%= @website.longitude %> 
                    <% end %>
                    </div>

                    <% if @website.hours %>
                    Business Hours: <%= @website.hours %> </br>
                    <% end %>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>
 <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                  <p>Copyright &copy; <%= Time.now.strftime('%Y') %> <%= @website.name %> </p>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </footer>

    <!-- jQuery -->
    <script src="/minimal-bootstrap/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/minimal-bootstrap/js/bootstrap.min.js"></script>

</body>

</html>

